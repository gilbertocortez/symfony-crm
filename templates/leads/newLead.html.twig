{% extends 'base.html.twig' %}

{% block title %}Leads Manager
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Customer Management</h1>
		<p>Please complete the following form to create the customer account</p>
		<div class="form-group">
			{{ form_start(form) }}
			<div class="my-custom-class-for-errors">
				{{ form_errors(form) }}
			</div>
			<div class="row">
				<div class="col">
					{{ form_row(form.address) }}
				</div>
				
			</div>
			<div class="row">
				<div class="col">
					{{ form_row(form.city) }}
				</div>
				<div class="col" id="some-custom-id">
					{{ form_row(form.zipCode) }}
				</div>
			</div>
			{{ form_end(form) }}
		</div>
	</div>
{% endblock %}
