{% extends 'base.html.twig' %}

{% block title %}Hello CustomerManagerController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Customer Information</h1>
		<p>
			Name: {{ customer.fullName }}
            <br>
            Email: {{ customer.email }}
			<br/>
            Phone: {{ customer.phone }}
			<br/>
            External ID: {{ customer.eid }}
			<br/>
            <a href="{{path('viewCustomers')}}">Go Back</a>
		</p>
	</div>
{% endblock %}
