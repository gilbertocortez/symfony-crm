{% extends 'base.html.twig' %}

{% block title %}Hello CustomerManagerController!
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #F5F5F5;
			padding: 2px 6px;
		}
	</style>

	<div class="example-wrapper">
		<h1>Customer Management</h1>
		<p>Please complete the following form to create the customer account</p>
		<div class="form-group">
			<form action="{{ path('addCustomer') }}" method="post">
				<h4>Customer information:</h4>
				<label for="customerFullName">Full Name</label>
				<input type="text" name="customerFullName" id="customerFullName" class="form-control">
				<br>

				<label for="customerPhone">Phone</label>
				<input type="tel" name="customerPhone" id="customerPhone" class="form-control">
				<br>

				<label for="customerEmail">Email</label>
				<input type="email" name="customerEmail" id="customerEmail" class="form-control">
				<br>

				<input type="hidden" name="customerExternalId" value="">

				<input type="submit" value="Add Customer" class="btn btn-primary">

			</form>
		</div>
	</div>
{% endblock %}
