{% extends 'base.html.twig' %}

{% block title %}Hello CustomerManagerController!
{% endblock %}

{% block body %}
	<div class="example-wrapper">
		<h1>View Customers</h1>
		<a href="{{path('customerManager')}}">Go Back</a>
		<div class="container">
			{% for customer in customers %}
				<div class="row">
					<div class="col">
						<a href="{{path('showCustomer',{ customerID:customer.id })}}">{{ customer.fullName }}</a>
					</div>
					<div class="col">
						<a href="{{path('newLead') }}">New Lead</a>
					</div>
					<div class="col">
						<a href="#">Delete</a>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>
{% endblock %}
